{% extends 'BBITAdminBundle::base.html.twig' %}

{% block title %}{{ project_name }} Dashboard Pages{% endblock %}

{% block body %}

    <table class="table">
    <tr>
        <th>id</th>
        <th>item</th>
        <th>action</th>
    </tr>
    {% for item in items %}
        <tr>
            <td>{{ item.id }}</td><td>{{ item }}</td><td><a href="{{ path('bbit_pages_edit', {'id': item.id}) }}">edit</a></td>
        </tr>
    {% endfor %}

    </table>

{% endblock %}
